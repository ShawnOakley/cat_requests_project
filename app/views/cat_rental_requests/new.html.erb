<form action="<%= cat_rental_requests_url %>"  method="post">

  <h1>  Cat Selections! </h1>

  <label>
    Please Select a Cat
    <select name="cat_rental_request[cat_id]">
      <option value="">Select a cat</option>
      <% @cats.each do |cat| %>
        <option value="<%=cat.id%>"><%= cat.name %></option>
      <% end %>
    </select>
  </label>
  <br>
  <label>
    Start date:
    <input type="date" name="cat_rental_request[start_date]">
  </label>
  <label>
    End date:
    <input type="date" name="cat_rental_request[end_date]">
  </label>

  <input type="submit" value="Submit">

  <input
   name="authenticity_token"
   type="hidden"
   value="<%= form_authenticity_token %>">
</form>