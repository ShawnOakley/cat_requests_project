<!DOCTYPE html>
<html>
<head>
  <title>CatsProject</title>
  <%= csrf_meta_tags %>

</head>

<body>
<p class="flash"><%= flash.notice %></p>
<% if current_user.nil? %>
<form action= <%= new_session_url %> method="GET">
  <input type = "submit" value="Log In">
</form>
<% else %>
<%= "Hello #{current_user.user_name}"%>
<form action= <%= user_session_url current_user.id  %> method="POST">
  <input type = "submit" value="Log Out">
  <input type="hidden" name="_method" value="DELETE">
</form>
<% end %>

<%= debug params %>

<%= yield %>
<form action= <%= new_user_url %> method="GET">
  <input type = "submit" value="Register">
</form>

<form action= <%= new_cat_url %> method="GET">
  <input type = "submit" value="Add Cat">
</form>


<form action= <%= cats_url %> method="GET">
  <input type = "submit" value="Return to Cat Index">
</form>


</body>
</html>
