All the stats:
<table>
<tr>
  <th>Name</th>
  <th>Birth Date</th>
  <th>Age</th>
  <th>Color</th>
  <th>Sex</th>
</tr>
<tr>
  <td><%=@cat.name%></td>
  <td><%=@cat.birth_date%></td>
  <td><%=@cat.age%></td>
  <td><%=@cat.color%></td>
  <td><%=@cat.sex%></td>
</tr>
</table>

<ul>
  <% @cat.requests.order(:start_date).each do |request| %>
  <li>Request #<%= request.id %> : <%= request.start_date %> through  <%= request.end_date %> STATUS: <%= request.status %>
    <% if request.pending? %>
    <%= button_to "Approve", approve_cat_rental_request_url(request.id) %>
    <%= button_to "Deny", deny_cat_rental_request_url(request.id) %>
    <% end %>
  </li>
  <% end %>
</ul>

<%= button_to "Make a reservation for this cat", new_cat_rental_request_url, method: "get" %>